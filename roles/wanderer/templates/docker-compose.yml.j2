services:
  eve-route-builder:
    image: {{ wanderer_eve_route_builder_image }}
    container_name: eve-route-builder
    restart: always
    environment:
      - PORT=2001

  wanderer_db:
    image: {{ wanderer_postgres_image }}
    restart: unless-stopped
    volumes:
      - db-data:/var/lib/postgresql/data
    env_file:
      - .env

  wanderer:
    image: {{ wanderer_image }}
    restart: always
    command: sh -c "sleep 10 && /app/entrypoint.sh db createdb && /app/entrypoint.sh db migrate && /app/entrypoint.sh run"
    depends_on:
      - eve-route-builder
      - wanderer_db
    expose:
      - 8000
    labels:
      virtual.host: {{ wanderer_domain }}  # your domain
      virtual.alias: www.{{ wanderer_domain }}  # alias for your domain (optional)
      virtual.port: 8000  # exposed port of this container
      virtual.tls-email: {{ wanderer_tls_email | default('') }}  # ssl is now on
    healthcheck:
      disable: true
    ulimits:
      memlock:
        soft: -1
        hard: -1
    environment:
      - CUSTOM_ROUTE_BASE_URL=http://eve-route-builder:2001
      - PHX_SERVER=true
      - ECTO_IPV6=false
      - ERL_AFLAGS=-proto_dist inet6_tcp
      - ERL_MAX_PORTS=1024
    env_file:
      - wanderer-conf.env

  backup:
    image: {{ wanderer_backup_image }}
    restart: always
    env_file:
      - .env
volumes:
  db-data:
    driver: local
